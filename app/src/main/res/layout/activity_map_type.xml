<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dkgray"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton2"
            android:elevation="@dimen/activity_vertical_margin"
            app:fabSize="mini"
            android:backgroundTint="@color/dkgray"
            app:rippleColor="#e7d16b"
            app:borderWidth="0dp"
            app:pressedTranslationZ="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="go_current"
            app:srcCompat="@android:drawable/ic_menu_mylocation" />
        <Button
            android:id="@+id/indoor"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:text="室内图"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/btn_selector"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:onClick="openIndoorView"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/btn_selector"
            android:onClick="cleanMapCache"
            android:textSize="@dimen/ui_size"
            android:text="清除缓存"
            android:textColor="@color/white" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/dkgray"
        android:gravity="center_horizontal"
        android:paddingRight="10dp"
    >
           <CheckBox
               android:id="@+id/heat_map"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="热力图"
               android:textSize="14sp"
               android:layout_weight="1"
               android:padding="2dp"
               android:textStyle="bold"
               android:textColor="@color/white"
               />
           <CheckBox
               android:id="@+id/road_map"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="路况图"
               android:textStyle="bold"
               android:textSize="14sp"
               android:layout_weight="1"
               android:textColor="@color/white"
               android:padding="2dp"
               />


    </LinearLayout>
    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />



</LinearLayout>
